{
  "name": "phonebook-backend",
  "version": "1.0.0",
  "description": "backend for the full stack helsinki part 3",
  "main": "index.js",
  "scripts": {
    "build:ui": "rm -rf build && cd ../full-stack-helsinki/part2/phonebook && npm run build && cp -r build ../../../phonebook-backend",
    "deploy": "fly deploy",
    "deploy:full": "npm run build:ui && npm run lint && npm run deploy",
    "logs:prod": "fly logs",
    "lint": "eslint . --fix",
    "start": "cross-env NODE_ENV=production node index.js",
    "dev": "cross-env NODE_ENV=development nodemon index.js",
    "test": "cross-env NODE_ENV=test jest --verbose --runInBand"
  },
  "author": "Carlos Gumucio",
  "license": "ISC",
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "mongodb": "^5.7.0",
    "mongoose": "^7.4.0",
    "morgan": "^1.10.0"
  },
  "devDependencies": {
    "@flydotio/dockerfile": "^0.3.3",
    "cross-env": "^7.0.3",
    "eslint": "^8.45.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-react": "^7.33.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "jest": "^29.6.1",
    "nodemon": "^3.0.1",
    "supertest": "^6.3.3"
  },
  "jest": {
    "testEnvironment": "node"
  }
}
